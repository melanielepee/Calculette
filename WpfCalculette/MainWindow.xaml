<Window x:Class="WpfCalculette.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalculette"
        mc:Ignorable="d"
        Title="Calculette" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="476*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="tbxNumber1" HorizontalAlignment="Left" Height="23" Margin="23,26,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1" RenderTransformOrigin="0.5,0.5"/>
        <TextBox x:Name="tbxNumber2" HorizontalAlignment="Left" Height="23" Margin="23,54,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <Button x:Name="btnAdd" Content="+" Grid.Column="1" HorizontalAlignment="Left" Margin="23,98,0,0" VerticalAlignment="Top" Width="27" Height="27" Click="btnAdd_Click"/>
        <Label x:Name="lblResponse" Content="Label" Grid.Column="1" HorizontalAlignment="Left" Margin="219,98,0,0" VerticalAlignment="Top" Width="120"/>


    </Grid>
</Window>
